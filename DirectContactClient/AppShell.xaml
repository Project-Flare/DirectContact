<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="DirectContactClient.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:DirectContactClient"
    xmlns:views="clr-namespace:DirectContactClient.Views"
    Shell.FlyoutBehavior="Disabled"
    
    Shell.NavBarIsVisible="False"
    Title="DirectContactClient">

    <ShellContent
        Title="LoginView"
        ContentTemplate="{DataTemplate views:LoginView}"
        Route="LoginView" />
    <ShellContent
        Title="RegisterView"
        ContentTemplate="{DataTemplate views:RegisterView}"
        Route="RegisterView" />
    <ShellContent
        Title="MainView"
        ContentTemplate="{DataTemplate views:MainView}"
        Route="MainView" />


</Shell>
